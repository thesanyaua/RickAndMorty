<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.rickandmorty.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_personListFragment"
            app:destination="@id/personListFragment" />
    </fragment>
    <fragment
        android:id="@+id/personListFragment"
        android:name="com.example.rickandmorty.PersonListFragment"
        android:label="PersonListFragment" >
        <action
            android:id="@+id/action_personListFragment_to_infoPersonFragment"
            app:destination="@id/infoPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoPersonFragment"
        android:name="com.example.rickandmorty.InfoPersonFragment"
        android:label="fragment_info_person"
        tools:layout="@layout/fragment_info_person" />
</navigation>